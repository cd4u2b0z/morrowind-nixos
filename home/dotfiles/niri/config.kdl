// ğŸªŸ WINDOW RULES - Matching your Hyprland windowrules
// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

window-rule {
    match app-id=r#"^pavucontrol$"#
    open-floating true
    default-column-width { fixed 800; }
}

window-rule {
    match app-id=r#"^blueman-manager$"#
    open-floating true
    default-column-width { fixed 700; }
}

window-rule {
    match app-id=r#"^nm-connection-editor$"#
    open-floating true
}

window-rule {
    match app-id=r#"^thunar$"#
    open-floating true
    default-column-width { fixed 1400; }
}

window-rule {
    match title="Picture-in-Picture"
    open-floating true
}

// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
// âŒ¨ï¸ KEY BINDINGS - IDENTICAL to your Hyprland config!
// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

binds {
    // APPLICATIONS
    Mod+Return { spawn "kitty"; }
    Mod+T { spawn "kitty"; }
    Mod+E { spawn "thunar"; }
    Mod+R { spawn "fuzzel"; }
    Mod+B { spawn "librewolf"; }
    Mod+Shift+B { spawn "brave"; }
    Mod+C { spawn "code"; }
    Mod+Shift+C { spawn "kitty" "-e" "btop"; }
    Mod+Period { spawn "kitty" "-e" "fastfetch"; }
    Mod+Comma { spawn "kitty" "-e" "btop"; }
    
    // WINDOW CONTROLS
    Mod+Q { close-window; }
    Mod+V { spawn "sh" "-c" "cliphist list | fuzzel --dmenu | cliphist decode | wl-copy"; }
    Mod+F { maximize-column; }
    Mod+Shift+F { fullscreen-window; }
    Mod+U { center-column; }
    
    // WINDOW FOCUS
    Mod+Left { focus-column-left; }
    Mod+Right { focus-column-right; }
    Mod+Up { focus-window-up; }
    Mod+Down { focus-window-down; }
    Mod+H { focus-column-left; }
    Mod+L { focus-column-right; }
    Mod+K { focus-window-up; }
    Mod+J { focus-window-down; }
    
    // WINDOW MOVEMENT
    Mod+Shift+Left { move-column-left; }
    Mod+Shift+Right { move-column-right; }
    Mod+Shift+Up { move-window-up; }
    Mod+Shift+Down { move-window-down; }
    Mod+Shift+H { move-column-left; }
    Mod+Shift+L { move-column-right; }
    Mod+Shift+K { move-window-up; }
    Mod+Shift+J { move-window-down; }
    
    // WINDOW RESIZING
    Mod+Ctrl+Left { set-column-width "-50"; }
    Mod+Ctrl+Right { set-column-width "+50"; }
    Mod+Ctrl+Up { set-window-height "-50"; }
    Mod+Ctrl+Down { set-window-height "+50"; }
    Mod+Ctrl+H { set-column-width "-50"; }
    Mod+Ctrl+L { set-column-width "+50"; }
    Mod+Ctrl+K { set-window-height "-50"; }
    Mod+Ctrl+J { set-window-height "+50"; }
    
    // WORKSPACES
    Mod+1 { focus-workspace 1; }
    Mod+2 { focus-workspace 2; }
    Mod+3 { focus-workspace 3; }
    Mod+4 { focus-workspace 4; }
    Mod+5 { focus-workspace 5; }
    Mod+6 { focus-workspace 6; }
    Mod+7 { focus-workspace 7; }
    Mod+8 { focus-workspace 8; }
    Mod+9 { focus-workspace 9; }
    
    Mod+Shift+1 { move-column-to-workspace 1; }
    Mod+Shift+2 { move-column-to-workspace 2; }
    Mod+Shift+3 { move-column-to-workspace 3; }
    Mod+Shift+4 { move-column-to-workspace 4; }
    Mod+Shift+5 { move-column-to-workspace 5; }
    Mod+Shift+6 { move-column-to-workspace 6; }
    Mod+Shift+7 { move-column-to-workspace 7; }
    Mod+Shift+8 { move-column-to-workspace 8; }
    Mod+Shift+9 { move-column-to-workspace 9; }
    
    Mod+Tab { focus-workspace-down; }
    Mod+Shift+Tab { focus-workspace-up; }
    Mod+Page_Down { focus-workspace-down; }
    Mod+Page_Up { focus-workspace-up; }
    Mod+WheelScrollDown cooldown-ms=150 { focus-workspace-down; }
    Mod+WheelScrollUp cooldown-ms=150 { focus-workspace-up; }
    
    // SCREENSHOTS
    Print { screenshot; }
    Mod+Print { screenshot-screen; }
    Mod+Shift+S { spawn "sh" "-c" "grim -g \"$(slurp)\" ~/Pictures/Screenshots/$(date +'%Y-%m-%d_%H-%M-%S').png"; }
    Ctrl+Print { spawn "sh" "-c" "grim - | wl-copy"; }
    Ctrl+Mod+Print { spawn "sh" "-c" "grim -g \"$(slurp)\" - | wl-copy"; }
    
    // AUDIO
    XF86AudioRaiseVolume allow-when-locked=true { spawn "wpctl" "set-volume" "@DEFAULT_AUDIO_SINK@" "5%+"; }
    XF86AudioLowerVolume allow-when-locked=true { spawn "wpctl" "set-volume" "@DEFAULT_AUDIO_SINK@" "5%-"; }
    XF86AudioMute allow-when-locked=true { spawn "wpctl" "set-mute" "@DEFAULT_AUDIO_SINK@" "toggle"; }
    XF86AudioMicMute allow-when-locked=true { spawn "wpctl" "set-mute" "@DEFAULT_SOURCE@" "toggle"; }
    Mod+Equal { spawn "pamixer" "-i" "5"; }
    Mod+Minus { spawn "pamixer" "-d" "5"; }
    Mod+0 { spawn "pamixer" "-t"; }
    
    // MEDIA
    XF86AudioPlay allow-when-locked=true { spawn "playerctl" "play-pause"; }
    XF86AudioPause allow-when-locked=true { spawn "playerctl" "play-pause"; }
    XF86AudioNext allow-when-locked=true { spawn "playerctl" "next"; }
    XF86AudioPrev allow-when-locked=true { spawn "playerctl" "previous"; }
    
    // BRIGHTNESS
    XF86MonBrightnessUp allow-when-locked=true { spawn "brightnessctl" "set" "5%+"; }
    XF86MonBrightnessDown allow-when-locked=true { spawn "brightnessctl" "set" "5%-"; }
    
    // SESSION
    Mod+Shift+Q { quit; }
    Mod+Ctrl+L { spawn "swaylock" "-f"; }
    Mod+Ctrl+S { spawn "systemctl" "suspend"; }
    Mod+Shift+R { spawn "sh" "-c" "niri msg action reload-config"; }
    Mod+Alt+R { spawn "sh" "-c" "killall waybar; waybar &"; }
    
    // WALLPAPER
    Mod+W { spawn "~/.config/niri/scripts/theme-switcher.sh"; }
    Mod+Shift+W { spawn "~/.config/niri/scripts/quick-wallpaper.sh"; }
    
    // NOTIFICATIONS
    Mod+N { spawn "makoctl" "dismiss"; }
    Mod+Shift+N { spawn "makoctl" "dismiss" "--all"; }
    Mod+Ctrl+N { spawn "makoctl" "restore"; }
    
    // EMERGENCY
    Ctrl+Alt+Delete { quit skip-confirmation=true; }
}

